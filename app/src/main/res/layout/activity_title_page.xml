<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    tools:context=".TitlePage">

    <androidx.cardview.widget.CardView
        android:id="@+id/logoCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="246dp"
            android:layout_height="246dp"
            app:srcCompat="@mipmap/main_icon" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/adlam_display"
        android:text="Minesweeper"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/logoCard"
        app:layout_constraintStart_toStartOf="@+id/logoCard"
        app:layout_constraintTop_toBottomOf="@+id/logoCard"
        app:layout_constraintVertical_bias="0.01999998" />

    <androidx.cardview.widget.CardView
        android:id="@+id/playCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="@id/titleTextView"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintVertical_bias="0.26">

        <Button
            android:id="@+id/playButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="246dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/bomb_background"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Play"
            app:layout_constraintHorizontal_bias="0.527"
            app:layout_constraintVertical_bias="0.508" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/settingsCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/playCardView"
        app:layout_constraintStart_toStartOf="@+id/playCardView"
        app:layout_constraintTop_toBottomOf="@+id/playCardView"
        app:layout_constraintVertical_bias="0.07999998">

        <Button
            android:id="@+id/settingsButton"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="246dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/bomb_background"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="Settings"
            app:layout_constraintHorizontal_bias="0.527"
            app:layout_constraintVertical_bias="0.508" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/creditTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/adlam_display"
        android:text="@string/made_by_trevor_carter"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/settingsCardView"
        app:layout_constraintStart_toStartOf="@+id/settingsCardView"
        app:layout_constraintTop_toBottomOf="@+id/settingsCardView"
        app:layout_constraintVertical_bias="0.98" />

</androidx.constraintlayout.widget.ConstraintLayout>